---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Employer Dashboard">
    <main class="min-h-screen bg-background">
        <div class="container mx-auto p-4 sm:p-6 lg:p-8 max-w-6xl">
            <!-- Header with back button -->
            <div class="flex items-center gap-4 mb-6 sm:mb-8">
                <a
                    href="/"
                    class="p-2 hover:bg-accent rounded-lg touch-manipulation"
                    aria-label="Back to home"
                >
                    ‚Üê Back
                </a>
                <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold flex-1">
                    Employer Dashboard
                </h1>
                <a
                    href="/employer/settings"
                    class="px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 touch-manipulation"
                >
                    ‚öôÔ∏è Settings
                </a>
            </div>

            <div class="grid gap-4 sm:gap-6 lg:grid-cols-2">
                <!-- Work Timer Card -->
                <div class="p-4 sm:p-6 border rounded-lg bg-card">
                    <h2
                        class="text-lg sm:text-xl font-semibold mb-4 flex items-center gap-2"
                    >
                        <span>‚è±Ô∏è</span>
                        <span>Work Timer</span>
                    </h2>
                    <div id="timer-app"></div>
                </div>

                <!-- Statistics Card -->
                <div class="p-4 sm:p-6 border rounded-lg bg-card">
                    <h2
                        class="text-lg sm:text-xl font-semibold mb-4 flex items-center gap-2"
                    >
                        <span>üìä</span>
                        <span>Statistics</span>
                    </h2>
                    <div class="space-y-4">
                        <div class="p-3 bg-muted rounded-lg">
                            <div class="text-sm text-muted-foreground">
                                Today
                            </div>
                            <div class="text-2xl font-bold">0h 0m</div>
                        </div>
                        <div class="p-3 bg-muted rounded-lg">
                            <div class="text-sm text-muted-foreground">
                                This Week
                            </div>
                            <div class="text-2xl font-bold">0h 0m</div>
                        </div>
                        <div class="p-3 bg-muted rounded-lg">
                            <div class="text-sm text-muted-foreground">
                                This Month
                            </div>
                            <div class="text-2xl font-bold">0h 0m</div>
                        </div>
                    </div>
                </div>

                <!-- Recent Sessions -->
                <div class="p-4 sm:p-6 border rounded-lg bg-card lg:col-span-2">
                    <h2
                        class="text-lg sm:text-xl font-semibold mb-4 flex items-center gap-2"
                    >
                        <span>üìù</span>
                        <span>Recent Sessions</span>
                    </h2>
                    <div class="text-sm text-muted-foreground">
                        No sessions yet. Start your first timer!
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
