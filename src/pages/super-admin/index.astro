                    <button
                        class="w-full px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 touch-manipulation"
                    >
                        Configure
                    </button>
                </div>

                <!-- Payments Overview -->
                <div
                    class="p-4 sm:p-6 border rounded-lg bg-card hover:shadow-lg transition-shadow"
