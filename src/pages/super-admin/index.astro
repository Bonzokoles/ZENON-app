                        Active Sessions
                    </div>
                    <div class="text-xl sm:text-2xl font-bold">0</div>
                </div>
            </div>

            <!-- Management Cards -->
            <div class="grid gap-4 sm:gap-6 lg:grid-cols-3">
                <!-- All Companies -->
                <div
                    class="p-4 sm:p-6 border rounded-lg bg-card hover:shadow-lg transition-shadow"
                >
